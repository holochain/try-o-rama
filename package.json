{
  "name": "@holochain/tryorama",
  "description": "E2E test framework for Holochain apps",
  "version": "0.5.0",
  "author": "Holochain Foundation",
  "repository": {
    "type": "git",
    "url": "https://github.com/holochain/tryorama"
  },
  "license": "CAL-1.0",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "workspaces": [
    "crates/trycp_server/test"
  ],
  "exports": {
    ".": "./lib/*.js"
  },
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "rimraf ./lib && tsc -p tsconfig.build.json && npm run build:docs",
    "build:docs": "api-extractor run --local && api-documenter markdown -i docs/temp -o docs",
    "prepare": "npm run lint && npm run build",
    "prepublishOnly": "npm test",
    "lint": "eslint --fix --ext .ts ts/src ts/test .eslintrc.cjs",
    "test": "node --experimental-specifier-resolution=node --loader ts-node/esm ts/test/index.ts | tap-diff",
    "test:local": "npm run test:local:conductor && npm run test:local:scenario",
    "test:local:conductor": "node --experimental-specifier-resolution=node --loader ts-node/esm ts/test/local/conductor.ts",
    "test:local:scenario": "node --experimental-specifier-resolution=node --loader ts-node/esm ts/test/local/scenario.ts",
    "test:trycp": "npm run test:trycp:server && npm run test:trycp:conductor && npm run test:trycp:scenario",
    "test:trycp:server": "node --experimental-specifier-resolution=node --loader ts-node/esm ts/test/trycp/server.ts",
    "test:trycp:conductor": "node --experimental-specifier-resolution=node --loader ts-node/esm ts/test/trycp/conductor.ts",
    "test:trycp:scenario": "node --experimental-specifier-resolution=node --loader ts-node/esm ts/test/trycp/scenario.ts",
    "test:holoport": "node --experimental-specifier-resolution=node --loader ts-node/esm ts/test/holo-port.ts"
  },
  "dependencies": {
    "@holochain/client": "^0.3.2",
    "@iarna/toml": "^2.2.5",
    "get-port": "^6.1.2",
    "lodash": "^4.17.20",
    "uuid": "^8.3.2",
    "winston": "^3.6.0",
    "ws": "^8.5.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.15.3",
    "@microsoft/api-extractor": "^7.19.4",
    "@msgpack/msgpack": "^2.7.2",
    "@types/lodash": "^4.14.165",
    "@types/node": "^12.20.45",
    "@types/ramda": "^0.26.44",
    "@types/tape": "^4.13.2",
    "@types/tape-promise": "^4.0.1",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^7.5.0",
    "tap-diff": "^0.1.1",
    "tape": "^5.5.2",
    "tape-promise": "^4.0.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
